<script>
    $(document).ready(function() {
        $('#profile').click(function() {
            $.ajax({
                type: "get",
                url: "@Url.Action("editprofile", "Project")",
                success: function(d) {
                    /* d is the HTML of the returned response */
                    $("#divProcessing").hide();
                    $("#commandiv").html(d); //replaces previous HTML with action
                }

            });
        });

        $("#profile").trigger("click");
    });
</script>

