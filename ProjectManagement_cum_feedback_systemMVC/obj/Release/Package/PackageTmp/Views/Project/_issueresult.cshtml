<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#searchissue #issuetitle1").filter(function () {
                $(this).closest('#searchissue').toggle($(this).text().toLowerCase().indexOf(value) > -1);
            });
           
        });
    });
</script>

